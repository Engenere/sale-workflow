<odoo>
    <record model="ir.ui.view" id="sale_config_settings_form_view">
        <field name="name">res.config.settings.form (in sale_first_time_state)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='proforma_configuration']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <label for="sale_first_sale_days_limit" />
                        <div class="text-muted mt4 mb4">
                            Limit of days to check whether a product has been sold to a specific partner. Set it to 0 so you don't have a limit.
                        </div>
                        <div class="text-muted mt4 mb4">
                            <field name="sale_first_sale_days_limit" />
                            <span
                                class="o_form_label"
                                style="margin-left: 5px;"
                            >Days</span>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
